# CHECK 6: Trade Secret Exception (Article 8.6) - DETAILED VERSION
# Find data that contains trade secrets
# Expected: Data with trade secrets and refusal justification

PREFIX dataact: <http://www.semanticweb.org/dataact#>

SELECT ?data ?secret ?justification
WHERE {
  ?data dataact:containsTradeSecret ?secret .
  ?secret a dataact:TradeSecret .
  
  # Check if refusal rule exists
  OPTIONAL {
    dataact:article8_6_rule dataact:permits ?permission .
    BIND("Refusal permitted under Article 8(6)" AS ?justification)
  }
}